[Unit]
Description=NginX
After=onelove.service
Requires=onelove.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill nginx
ExecStartPre=-/usr/bin/docker rm nginx
ExecStartPre=/usr/bin/docker pull mekanix/nginx
ExecStart=/usr/bin/docker run -p 80:80 --volumes-from onelove --link onelove:app --name nginx --rm mekanix/nginx
ExecStop=/usr/bin/docker stop nginx
